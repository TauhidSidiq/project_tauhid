  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <% if (firstLogin == true) { %>
      <script>
        Swal.fire({
          icon: 'success',
          title: 'Berhasil Login',
          timer: 1500,
        })
     </script>
    <% }  else if (status == "success") { %>
      <script>
        Swal.fire({
          icon: 'success',
          title: "<%= message %>",
          timer: 1500,
        })
     </script>
  <% }  else if (status == "failed") { %>
    <script>
      Swal.fire({
        icon: 'error',
        title: "<%= message %>",
        timer: 1500,
      })
   </script>
  <% } %> 
  
    <!-- Navbar -->
    <header class="relative font-light">
        <div class="container px-6 py-6 mx-auto lg:flex lg:items-center lg:justify-between">
