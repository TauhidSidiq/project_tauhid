  <!-- ======= Header Section ======= -->
  <%- include("layouts/header") -%>

  <main id="main">


    
    <!-- ======= SMM Section ======= -->
    <% items.forEach((item)=> {%>
    <section id="features" class="features">
      <div class="container">

        <div class="section-title pb-1" data-aos="fade-up">
          <h2><%= item.name %></h2>
          <p><%= item.desc %></p>
        </div>

        <% item.Departements.forEach((department)=> {%>
        <div class="row" data-aos="fade-up" data-aos-delay="300">
          <div class="col-lg-3 col-md-4 mt-4">
            <div class="icon-box">
              <i class="ri-file-list-3-line" style="color: #11dbcf;"></i>
              <button style="border: none;" data-toggle="modal" data-target="#modalCart<%= department.id %>"><h3><%= department.name %></h3></button>
            </div>
          </div>
        </div> 
    </section><!-- End SMM Section -->

    
<!-- Button trigger modal-->
<!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalCart">Launch modal</button> -->

<!-- Modal: modalCart -->
<div class="modal fade" id="modalCart<%= department.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <!--Header-->
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Halaman File</h4>
      </div>
      <!--Body-->
      <div class="modal-body">

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nama File</th>
              <th>Link</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% department.Files.forEach(function(file) { %>
              <td><%= file.name %></td>
              <td><a target="_blank" href="<%- file.file %>">Download File</a></td>
              <% }); %>
            </tr>
          </tbody>
        </table>

      </div>
      <!--Footer-->
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!-- Modal: modalCart -->

<% }); %>

<% }) %>


    

  </main><!-- End #main -->

